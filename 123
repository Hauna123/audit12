        <!-- Submit button -->
        <button id="submitForm">Submit</button>
    </div>

    <script>
        const radioButtons = document.querySelectorAll('input[type="radio"]');
        const collapsibles = document.querySelectorAll('.collapsible');

        radioButtons.forEach((radioButton) => {
            radioButton.addEventListener('click', (event) => {
                event.stopPropagation();
            });
        });

        const submitButton = document.getElementById('submitForm');
        submitButton.addEventListener('click', function (event) {
            event.preventDefault();
            // Form submission logic
            const formData = new FormData();

            const auditorName = document.getElementById('auditNameDropdown').value;
            const schoolName = document.getElementById('schoolDropdown').value;
            const mentorName = document.getElementById('mentorName').value;

            formData.append('auditorName', auditorName);
            formData.append('schoolName', schoolName);
            formData.append('mentorName', mentorName);

            radioButtons.forEach((radioButton) => {
                if (radioButton.checked) {
                    formData.append(radioButton.name, radioButton.value);
                }
            });

            fetch('https://script.google.com/macros/s/AKfycbx7b_ykNVGjm6cAZc1Uo60viiyI2qI3EmRJ3sldrksL9OFaTg2iK7usxX1zs5qgtumO/exec', {
                method: 'POST',
                body: formData,
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.result === 'success') {
                        alert('Form submitted successfully!');
                        // Reset form or redirect as needed
                    } else {
                        alert('Error submitting form.');
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                    alert('An error occurred.');
                });
        });

        collapsibles.forEach((collapsible) => {
            collapsible.addEventListener('click', function () {
                const content = this.nextElementSibling;
                const isCollapsed = content.style.maxHeight === '0px';

                collapsibles.forEach((otherCollapsible) => {
                    if (otherCollapsible !== this) {
                        otherCollapsible.classList.remove('active');
                        otherCollapsible.nextElementSibling.style.maxHeight = '0px';
                    }
                });

                if (isCollapsed) {
                    this.classList.add('active');
                    content.style.maxHeight = content.scrollHeight + 'px';
                } else {
                    this.classList.remove('active');
                    content.style.maxHeight = '0px';
                }
            });
        });
    </script>
    </body>
</html>
